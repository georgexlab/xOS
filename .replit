modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "xOS Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Lint"

[[workflows.workflow]]
name = "xOS Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/dev.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Lint"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx eslint . --ext .ts --config eslint.config.js"

[deployment]
run = ["sh", "-c", "node scripts/dev.js"]

[[ports]]
localPort = 4000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
